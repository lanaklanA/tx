<mah:MetroWindow  
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" 
        x:Class="TourPlannerUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlannerUi" xmlns:views="clr-namespace:TourPlannerUi.Views"
    mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Tour Planner" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".40*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:ToursView Grid.Column="0" Margin="2, 2, 0, 0"/>
        <views:CreateAndEditTourView Grid.Column="1" />
    </Grid>
</mah:MetroWindow>
